@using ecom.Data.ViewModels
@model LoginVm
@{
    ViewData["Title"] = "Login Page";
    Layout = "~/Views/Shared/Front/_Layout.cshtml";
}

        <div class="ht__bradcaump__area">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="bradcaump__inner">
                        	<h2 class="bradcaump-title">Sign In 
                            </h2>
                            <nav class="bradcaump-content">
                              <a class="breadcrumb_item" asp-route="Home">Home</a>
                              <span class="brd-separetor">>></span>
                              <span class="breadcrumb_item active">EBOOK</span>
							  <span class="brd-separetor">>></span>
                              <span class="breadcrumb_item active">Sign In</span>
                            </nav>
                        </div>
						<hr style="margin-top:10px;">
                    </div>
                </div>
            </div>
        </div>


        <section class="my_account_area pt--30 pb--55 bg--white">
			<div class="container">
				<div class="row">
                    @* <div class="col-lg-12">
        				<div class="section__title--3 text-center pb--30">
        					<h2>User Login</h2>
        				</div>
        			</div> *@
					<div class="offset-lg-3 col-lg-6 col-12">
						<div class="my__account__wrapper">
							<h3 class="account__title text-center">EBOOK Sign In</h3>
                            
							<form asp-action="LoginCheck" method="POST">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
								<div class="account__form">
									<div class="input__box">
										<label>Email address <span>*</span></label>
										<input type="email" asp-for="EmailAddress">
                                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
									</div>
									<div class="input__box">
										<label>Password<span>*</span></label>
										<input asp-for="Password">
                                        <span asp-validation-for="Password" class="text-danger"></span>
									</div>
                                    <div class="input__box">
                                        @if(TempData["Error"] != null)
                                        {
                                            <span class="text-danger">@TempData["Error"]</span>
                                        }
                                    </div>
									<div class="form__btn mt--30">
										<button type="submit" style="width: 100%;">Login</button>
										@* <label class="label-for-checkbox">
											<input id="rememberme" class="input-checkbox" name="rememberme" value="forever" type="checkbox">
											<span>Remember me</span>
										</label> *@
									</div>
									@* <a class="forget_pass" href="#">Lost your password?</a> *@
								</div>
							</form>
						</div>
					</div>
					
				</div>
			</div>
		</section>
