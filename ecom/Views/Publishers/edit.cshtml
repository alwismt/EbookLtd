@model Publisher

@{
    ViewData["Title"] = @Model.Name + " - Writer";
    ViewData["Head"] = "Writers Management | "+@Model.Name;
    ViewData["Publishers"] = "active";
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
}


<section class="textarea-select">
    <div class="row match-height">
        
        <div class="col-lg-12 col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title" style="float: left;">Edit Publisher @Model.Name</h4>
                    <a asp-action="Index" class="card-title" style="float: right;">Back to Publishers</a>
                </div>
                
                <div>
                <div class="col-lg-8 card-block float-left" style="margin-bottom:30px;">
                    <div class="card-body">
                      <form asp-action="update" asp-route-id="@Model.Id" method="POST" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <h5 class="mt-2">Writer Name</h5>
                        <fieldset class="form-group">
                            <input type="text" class="form-control" placeholder="Enter Writer's Name" asp-for="Name" required>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </fieldset>
                        <h5 class="mt-2">Writer Image</h5>
                        @* <fieldset class="form-group">
                            <input type="file" class="form-control" name="image" accept="image/*">
                            <span asp-validation-for="Image" class="text-danger"></span>
                            <span class="text-danger">@ViewBag.ErrorMessage</span>
                        </fieldset> *@
                        <h5 class="mt-2">Writer Biography</h5>
                        <fieldset class="form-group">
                            <textarea class="form-control" id="placeTextarea" rows="10" placeholder="Enter Writer's Biography" asp-for="Bio" required></textarea>
                            <span asp-validation-for="Bio" class="text-danger"></span>
                        </fieldset>
                        <h5 class="mt-2">&nbsp;</h5>
                        <fieldset class="form-group">
                            <button type="submit" class="form-control">Update Publisher Details</button>
                        </fieldset>
                        @* <input type="hidden" value="@Model.Image" name="oldImage"> *@
                      </form>   
                    </div>
                </div>
                <div class="col-lg-4 card-block float-right">
                    <div class="card">
                        <div class="card-body mt-2">
                            <h4 class="card-title">@Model.Name</h4>
                            
                        </div>
                        @* <img class="rounded-circle" src="@Model.Image" alt="@Model.Name" style="max-width: 80%; margin-left: 20px;"> *@
                        <div class="card-body">
                            <p class="card-text">@Model.Bio</p>
                            @* <a href="#" class="card-link">Card link</a>
                            <a href="#" class="card-link">Another link</a> *@
                        </div>
                        
                    </div>
                </div>
                </div>

            </div>
        </div>
    </div>
    



</section>
