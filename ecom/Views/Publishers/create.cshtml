@model Publisher
@{
    ViewData["Title"] = "Add New Publisher";
    ViewData["Head"] = "Publisher Management | Add New Writter";
    ViewData["Publishers"] = "active";
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
}

<section class="textarea-select">
