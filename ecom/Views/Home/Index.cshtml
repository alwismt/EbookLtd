@{
    ViewData["Title"] = "Home Page";
    ViewData["des"] = "EBOOK LTD, Sri Lankan Biggest online book shop. Order online and get the books delivered to your doorstep.";
    ViewData["metaimg"] = @Context.Request.Scheme + "://" +@Context.Request.Host + "/images/logo/ad_logo.png";
    Layout = "~/Views/Shared/Front/_Layout.cshtml";
}


        <div class="slider-area brown__nav slider--15 slide__activation slide__arrow01 owl-carousel owl-theme">


			<div class="slide animation__style10 bg-image--1 fullscreen align__center--left" style="background-image: url(images/bg/1.webp);">
				<div class="container">
	            	<div class="row">
	            		<div class="col-lg-12">
	            			<div class="slider__content">
								
								<div class="contentbox">
		            				<h2>Order <span>Online </span> and</h2>
		            				<h2>Get the books <span>Delevered </span></h2>
		            				<h2>To your <span>Doorstep </span></h2>
				                   	<a class="shopbtn" asp-route="Shop">Visit our collection</a>
		            			</div>
	            			</div>
	            		</div>
	            	</div>
	            </div>
            </div>
        </div>


    <!-- Start BEst Seller Area -->
		<section class="wn__product__area brown--color pt--50  pb--30">
			<div class="container">
				<div class="row">
					<div class="col-lg-12">
						<div class="section__title text-center">
							<h2 class="title__be--2">Latest <span class="color--theme">Products</span></h2>
		
						</div>
					</div>
				</div>
				<!-- Start Single Tab Content -->
				<div class="furniture--4 border--round owl-carousel owl-theme row mt--20">
					@foreach (var item in @ViewBag.newBooks)
					{
					
					<div class="product product__style--3">
						<div class="col-lg-3 col-md-4 col-sm-6 col-12">
							<div class="product__thumb">
								<a class="first__img" asp-action="BookView" asp-route-slug="@item.Slug"><img src="@item.Image" class="product_image" alt="@item.Name"></a> 
								
								<div class="hot__box">
									<span class="hot-label">NEW</span>
								</div>
							</div>
							<div class="product__content content--center">
								<h4><a asp-route="BookView" asp-route-slug="@item.Slug">@item.Name</a></h4>
								<ul class="prize d-flex">
									<li> &nbsp; &nbsp; Rs. @item.Price</li>
								</ul>
								<div class="action">
									<div class="actions_inner">
										<ul class="add_to_links">
											<li><a title="Add to Cart" class="cart" href="cart.html"><i class="bi bi-shopping-bag4"></i></a></li>
											
											<li><a data-toggle="modal" title="View Product" class="quickview modal-view detail-link" href="#productmodal"><i class="bi bi-search"></i></a></li>
										</ul>
									</div>
								</div>
							</div>
						</div>
					</div>
					<!-- Start Single Product -->
					}
				</div>
				<!-- End Single Tab Content -->
			</div>
		</section>
		<!-- Start BEst Seller Area -->


        <section class="wn__newsletter__area bg-image--2" style="background-image: url(images/bg/2.webp)">
			<div class="container">
				<div class="row">
					<div class="col-lg-7 offset-lg-5 col-md-12 col-12 ptb--150">
						<div class="section__title text-center">
							<h2>Stay <b style="color: #2f5a85;">Home</b>
								<br/><b style="color: #2f5a85;">Stay</b> Safe</h2>
						</div>
						<div class="newsletter__block text-center">
							<p>The moon is a loyal companion. It never
								leaves. It's always there, <br>
								watching,  steadfast, knowing us in our light and dark moments,<br>
								changing forever just as <b style="color: #2f5a85;">BOOKS</b>  do.

							</p>

						</div>
					</div>
				</div>
			</div>
		</section>
















